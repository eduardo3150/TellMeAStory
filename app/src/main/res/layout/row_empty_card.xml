<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true"
    card_view:theme="@style/CardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/row_story_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:transitionName="@string/shared_element" />

        <TextView
            android:id="@+id/row_story_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_story_thumbnail"
            android:padding="8dp"
            android:textAppearance="?textAppearanceListItem" />

        <ImageButton
            android:id="@+id/row_menu_trigger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/row_story_thumbnail"
            android:background="@null"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_more_vert_24dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>